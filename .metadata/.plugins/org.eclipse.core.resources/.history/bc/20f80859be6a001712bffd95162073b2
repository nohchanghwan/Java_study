import com.oop.Student;

public class StudentMain {

	public static void main(String[] args) {
	
	Student [] stuAry = new Student[3];
	Student stu = new Student("È«±æµ¿",15,170,80);
	Student stu2 = new Student("ÇÑ»ç¶÷",13,180,70);
	Student stu3 = new Student("È«±æµ¿",16,175,65);
	
	int idx = 0;
	stuAry[idx++] = stu;
	stuAry[idx++] = stu2;
	stuAry[idx++] = stu3;
	
	for(int i=0;i<stuAry.length;i++){
		Student person = stuAry[i];
		if(person == null){
			break;
			}
		System.out.println(person.studentInfo());
		}
	}

}
