import com.oop.Student;

public class StudentMain {

	public static void main(String[] args) {
	
	Student [] stuAry = new Student[3];
	Student stu = new Student("È«±æµ¿",15,170,80);
	Student stu2 = new Student("ÇÑ»ç¶÷",13,180,70);
	Student stu3 = new Student("È«±æµ¿",16,175,65);
	
	int idx = 0;
	stuAry[idx++] = stu;
	stuAry[idx++] = stu2;
	stuAry[idx++] = stu3;   	
	System.out.println("ÀÌ¸§	 ³ªÀÌ    ½ÅÀå   ¸ö¹«°Ô");
		for(int i=0;i<stuAry.length;i++){
			Student person = stuAry[i];
			if(person == null){
				break;
				}
			System.out.println(person.studentInfo());
		}
	
	double ageHap= 0;
	int ageMax=0;
	int ageMin=1000;
	String ageMaxname = null;
	String ageMinname = null ;
	double heightHap= 0;
	int heightMax=0;
	int heightMin=1000;
	double weightHap= 0;
	int weightMax=0;
	int weightMin=1000;
	
		for(int i=0;i<stuAry.length;i++){
			Student person = stuAry[i];
			if(person == null){
				break;
				}
			ageHap += person.getAge();
				if(person.getAge()>ageMax){
					ageMaxname = person.getName();
				}
				if(person.getAge()<ageMin){
					ageMinname = person.getName();
				}
		}
		for(int i=0;i<stuAry.length;i++){
			Student person = stuAry[i];
			if(person == null){
				break;
				}
			heightHap += person.getHeight();
				if(person.getHeight()>heightMax){
					heightMax = person.getHeight();
				}
				if(person.getHeight()<heightMin){
					heightMin = person.getHeight();
				}
		}
		for(int i=0;i<stuAry.length;i++){
			Student person = stuAry[i];
			if(person == null){
				break;
				}
			weightHap += person.getWeight();
				if(person.getWeight()>weightMax){
					weightMax = person.getWeight();
				}
				if(person.getWeight()<weightMin){
					weightMin = person.getWeight();
				}
		}
		System.out.println("");
		System.out.println("³ªÀÌ Æò±Õ:"+ageHap/3);
		System.out.println("½ÅÀå Æò±Õ:"+heightHap/3);
		System.out.println("¸ö¹«°ÔÆò±Õ:"+weightHap/3);
		System.out.println("");
		System.out.println(ageMaxname);
		System.out.println(ageMin);
		System.out.println(heightMax);
		System.out.println(heightMin);
		System.out.println(weightMax);
		System.out.println(weightMin);
		
		

	}
	

}
