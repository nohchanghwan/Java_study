import hip.model.vo.Boat;
import hip.model.vo.Cruise;
import hip.model.vo.Ship;

public class ShipMain {

	public static void main(String[] args) {

		Ship shiparr [] = new Ship[2];
		Boat myboat = new Boat("Boat01",500);
		Cruise mycruise = new Cruise("Cruise01",1000);
		int idx = 0;
		shiparr[idx++] = myboat;
		shiparr[idx++] = mycruise;
		
		System.out.println("shipName    fuelTank");
		System.out.println("--------------------");

		for(int i=0;i<shiparr.length;i++){
			Ship bae = shiparr[i];
			if(bae == null){
				break;
			}
			System.out.println(bae.getShipName()+"\t"+"\t"+bae.getFuelTank());
		}
		for(int i=0;i<shiparr.length;i++){
			Ship bae = shiparr[i];
			if(bae == null){
				break;
			}else{
				myboat.sail(10);
				mycruise.sail(10);
			System.out.println(bae.getShipName()+"\t"+"\t"+bae.getFuelTank());
				}
		}
	}

}
